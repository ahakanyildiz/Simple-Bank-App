@model SelectList
@{
    ViewData["Title"] = "SendMoney";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mt-3">
    <form asp-action="SendMoney" method="post" class="w-75 mx-auto">
        <input type="hidden" name="SenderId" value="@ViewBag.SenderId" />
        <div class="mb-3">
            <label class="form-label">Hesap Numarası:</label>
            <select asp-items="Model" class="form-select" aria-label="Bir hesap seçiniz." name="AccountId">
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Göndreceğiniz Tutar:</label>
            <input type="number" name="Amount" class="form-control" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Para Gönder</button>
        </div>
    </form>
</div>