@model UserListModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row mt-3">
    <div class="col-6">
        <h4>Hesap Eklenecek Kişinin Bilgileri</h4>
        <p>
            Kullanıcının Adı: @Model.Name
        </p>
        <p>
            Kullanıcının Soyadı: @Model.Surname
        </p>
        <p>
            Kullanıcının Aktif Hesap Sayısı : <getAccountCount application-user-id="@Model.Id"></getAccountCount>
        </p>
    </div>

    <div class="col-6">
        <h4>Ekleme İşlemi</h4>
        <form asp-action="Create" asp-controller="Account" method="post">
            <div class="mb-3">
                <input type="hidden" name="ApplicationUserId"  value="@Model.Id"/>
            </div>

            <div class="mb-3">
                <label class="form-label">Hesap Numarası</label>
                <input type="text" name="AccountNumber" />
            </div>

            <div class="mb-3">
                <label class="form-label">Bakiye</label>
                <input type="number" class="form-control" name="Balance" />
            </div>

            <button class="btn btn-primary">Kaydet</button>

        </form>
    </div>
</div>
